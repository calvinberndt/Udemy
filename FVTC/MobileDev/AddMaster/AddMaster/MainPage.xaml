<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:AddMaster" 
             x:Class="AddMaster.MainPage"
             Padding="20, 20, 20, 20">
    <StackLayout>
      
        <Label Text="Add Master Pro" FontSize="30" HorizontalOptions="Center"/>
        
        <StackLayout Padding="0,50,0,0">
            <Label Text="First Number" />
            <Entry x:Name="txtFirstNumber" Keyboard="Numeric"/>
        </StackLayout>
        
        <StackLayout Padding="0,25,0,0">
            <Label Text="Second Number" />
            <Entry x:Name="txtSecondNumber" Keyboard="Numeric"/>
        </StackLayout>
        
        <StackLayout Padding="0,50,0,0">
            <Label Text="0" Font="30" HorizontalOptions="Center"/>
        </StackLayout>
        
        <StackLayout Orientation="Horizontal" Padding="0,25,0,0">
            <Button Text="Add" HorizontalOptions="FillAndExpand" />
            <Button Text="Clear"  HorizontalOptions="FillAndExpand"/>

        </StackLayout>
    </StackLayout>
</ContentPage>